style.
  body {
    padding: 0;
    background-color: #f2f2f2;
    -webkit-text-size-adjust: none;
    text-size-adjust: none;
  }
  a[x-apple-data-detectors] {
    color: inherit !important;
    text-decoration: inherit !important;
  }
  table {
    mso-table-lspace: 0; 
    mso-table-rspace: 0;
  }
  p {
    font-size: 16px;
    text-align: left;
    mso-line-height-alt: 24px;
    width: 100%;
  }
  .column {
    mso-table-lspace: 0; 
    mso-table-rspace: 0;
  }
  .row-content {
    color: #000;
    width: 100%;
    max-width: 700px;
  }
  .break-word {
    word-break: break-word;
  }
  .nl-container {
    background-color: #f2f2f2;
  }
  .row {
    background-color: #f2f2f2;
  }
  .column-1 {
    font-weight: 400;
    text-align: left;
    vertical-align: top;
    border-top: 0;
    border-right: 0;
    border-bottom: 0;
    border-left: 0;
  }
  .stack {
    width: 100%;
  }
  .text {
    font-size: 12px;
    font-family: Trebuchet MS,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Tahoma,sans-serif;
    mso-line-height-alt: 18px;
    color: #000;
    line-height: 1.5;
  }
  .pad {
    padding-bottom: 10px;
    padding-left: 30px;
    padding-right: 30px;
    padding-top: 10px;
  }
  .btn {
    text-decoration: none;
    display: inline-block;
    color: #ffffff !important;
    background-color: #1c4d76;
    border-radius: 5px;
    width: auto;
    border-top: 0px solid transparent;
    font-weight: 400;
    border-right: 0px solid transparent;
    border-bottom: 0px solid transparent;
    border-left: 0px solid transparent;
    font-family: Trebuchet MS, Lucida Grande, Lucida Sans Unicode, Lucida Sans, Tahoma, sans-serif;
    text-align: center;
    mso-border-alt: none;
    word-break: keep-all;
    padding-left: 20px;
    padding-right: 20px;
    padding-top: 5px;
    padding-bottom: 5px;
    font-size: 20px;
    display: inline-block;
    letter-spacing: normal;
    line-height: 40px;
  }